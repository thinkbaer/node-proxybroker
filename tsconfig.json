{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015",
      "es5"
    ],
    "outDir": "./build/compiled",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "pretty": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./typings/modules",
      "./node_modules/@types"
    ]
    /*,
    "types": [
      "mocha",
      "es6-promise",
      "node",
      "object-assign"
    ]*/
  },
  /*
  "include": [
    "src/** /*.ts",
    "typings/** /*.ts",
    "test/** /*.ts"
  ],*/
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "compileOnSave": true
}